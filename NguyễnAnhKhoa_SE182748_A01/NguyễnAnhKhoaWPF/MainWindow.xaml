<Window x:Class="NguyễnAnhKhoaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyễnAnhKhoaWPF"
        mc:Ignorable="d"
         Title="Admin Dashboard" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel Margin="-10,-10,-10,-10">

            <StackPanel.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF00B4DB" Offset="0.0"/>
                   
                    <GradientStop Color="#FF0083B0" Offset="0.3"/>
                   
                    <GradientStop Color="#FF00C9A7" Offset="0.6"/>
                   
                    <GradientStop Color="#FF00F260" Offset="1.0"/>
                   
                </LinearGradientBrush>
            </StackPanel.Background>
            
            <TextBlock x:Name="txtWelcome" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <WrapPanel Margin="0,0,0,20" HorizontalAlignment="Center">
                <Button Content="Customers" Width="120" Margin="5" Click="BtnCustomers_Click"/>
                <Button Content="Products" Width="120" Margin="5" Click="BtnProducts_Click"/>
                <Button Content="Orders" Width="120" Margin="5" Click="BtnOrders_Click"/>
                <Button Content="Reports" Width="120" Margin="5" Click="BtnReports_Click"/>
            </WrapPanel>
            <Button Content="Logout" Width="80" HorizontalAlignment="Right" Click="BtnLogout_Click"/>
        </StackPanel>
    </Grid>
</Window>
